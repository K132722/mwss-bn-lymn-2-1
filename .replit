entrypoint = "index.html"
modules = ["web"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "/"
deploymentTarget = "static"
run = ["sh", "-c", "python -m http.server 5000"]

[workflows]
runButton = "Serve static"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[ports]]
localPort = 80
externalPort = 80

[agent]
expertMode = true
